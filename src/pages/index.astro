---
import BaseLayout from '../layouts/BaseLayout.astro';
import MyComponent from '../components/MyComponent.vue';
const pageTitle = "Home Page";
---
<title>{pageTitle}</title>
<BaseLayout>
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <h1>សួស្ដី</h1>
      <h1>Welcome to My Blog</h1>
      <p> Poscar internship.</p>
      <MyComponent />
      <a href="/blog" class="btn">Explore Blog</a>
    </div>
  </section>
</BaseLayout>

<!-- CSS -->
<style>
  body {
    font-family: 'Montserrat', sans-serif; /* Updated font */
    color: #444; /* Slightly darker text for better contrast */
    margin: 0;
    padding: 0;
    line-height: 1.6; /* Improved line height for readability */
  }

  /* Hero Section */
  .hero {
    text-align: center;
    padding: 120px 20px;
    background-image: url('../public/pp.jpg'); /* Background image */
    background-size: cover;
    background-position: center;
    color: #fff;
    position: relative;
    z-index: 1;
  }

  .hero::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5); /* Dark overlay for better text contrast */
    z-index: -1;
  }

  .hero h1 {
    font-size: 3.5em; /* Increased size for emphasis */
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.7); /* Shadow for better visibility */
  }

  .hero p {
    font-size: 1.5em;
  }

  /* Button Styles */
  .btn {
    display: inline-block;
    padding: 15px 30px;
    background-color: #007bff;
    color: #fff;
    text-decoration: none;
    border-radius: 25px;
    transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s; /* Added box-shadow transition */
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Subtle shadow effect */
  }

  .btn:hover {
    background-color: #0056b3;
    transform: translateY(-3px);
    box-shadow: 0 6px 15px rgba(0, 0, 0, 0.3); /* Deeper shadow on hover */
  }

  /* Section Styles */
  .services, .blog-preview, .contact {
    padding: 60px 20px;
    text-align: center;
  }

  .services h2, .blog-preview h2, .contact h2 {
    margin-bottom: 40px;
    font-size: 2.5em;
    color: #333; /* Darker color for headings */
  }

  .service-list, .blog-list {
    display: flex;
    justify-content: space-around;
    flex-wrap: wrap;
  }

  .service-item, article {
    width: 30%;
    margin: 20px;
    padding: 20px;
    border: 1px solid #ddd;
    border-radius: 10px;
    transition: transform 0.3s, box-shadow 0.3s; /* Added box-shadow transition */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Subtle shadow */
  }

  .service-item:hover, article:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Stronger shadow on hover */
  }

  h3 {
    font-size: 1.8em;
    margin-bottom: 10px;
    color: #007bff; /* Color to match buttons */
  }

  p {
    margin-bottom: 20px;
  }

  .link {
    text-decoration: none;
    color: #007bff;
    font-weight: bold;
  }

  .link:hover {
    text-decoration: underline;
  }

  .contact {
    background-color: #f7f7f7; /* Light background for contrast */
  }
</style>
