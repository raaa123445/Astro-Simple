---
import Navigation from '../components/Navigation.astro';
import "../styles/global.css";
import Footer from '../components/Footer.astro';
import BlogPost from '../components/BlogPost.astro'; // Ensure this import
const pageTitle = "Blog Page"; // Corrected title
const allPosts = await Astro.glob('./posts/*.md');
---

<html lang="en">
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width" />
    <title>{pageTitle}</title>
    <style>
      /* Global styles */
      body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
        line-height: 1.6;
        background-color: #f4f4f4;
        color: #333;
      }

      h1 {
        text-align: center;
        margin: 40px 0;
        font-size: 2.8em;
        color: #222;
        text-transform: uppercase;
      }

      p {
        text-align: center;
        font-size: 1.3em;
        margin-bottom: 40px;
        color: #555;
      }

      ul {
        list-style: none;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
      }

      .blog-post {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        margin: 20px 0;
        padding: 20px;
        max-width: 600px;
        width: 90%;
        transition: transform 0.3s, box-shadow 0.3s;
      }

      .blog-post:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
      }

      .blog-post h2 {
        margin: 0 0 10px;
        font-size: 2em;
        color: #007bff;
      }

      .blog-post p {
        margin: 10px 0;
        color: #666;
      }

      .blog-post a {
        display: inline-block;
        margin-top: 15px;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s, transform 0.2s;
      }

      .blog-post a:hover {
        background-color: #0056b3;
        transform: scale(1.05);
      }

      footer {
        text-align: center;
        padding: 20px;
        background-color: #007bff;
        color: white;
        margin-top: 40px;
      }

      footer p {
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <Navigation />
    <h1>My Astro Learning Blog</h1>
    <p>This is where I will post about my journey learning Astro.</p>
    <ul>
      {allPosts.map((post) => (
        <li class="blog-post">
          <BlogPost url={post.url} title={post.frontmatter.title} />
        </li>
      ))}
    </ul>
    <Footer />
  </body>
</html>
